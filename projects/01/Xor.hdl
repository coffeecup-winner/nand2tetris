/**
 * Exclusive-or gate:
 * out = not (a == b)
 */

CHIP Xor {
  IN a, b;
  OUT out;

  PARTS:
    // a ^ b = (!a && b) || (a && !b)
    Not(in = a, out = nota);
    Not(in = b, out = notb);
    And(a = nota, b = b, out = v0);
    And(a = a, b = notb, out = v1);
    Or(a = v0, b = v1, out = out);
}
